<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppBasic"
        mc:Ignorable="d"
        Title="My first GUI" Height="500" Width="800">
    <StackPanel>
        <TextBlock Foreground="Blue" FontSize="25" Margin="20" HorizontalAlignment="Center">Hello Charles</TextBlock>
        <ListBox Width="100" FontSize="25" Margin="25">
            <ListBoxItem>item 1</ListBoxItem>
            <ListBoxItem>item 2</ListBoxItem>
            <ListBoxItem>item 3</ListBoxItem>
        </ListBox>
        <Button FontSize="25" Width="200" PreviewMouseLeftButtonUp="Button_PreviewMouseLeftButtonUp">click me</Button>
    </StackPanel>
</Window>
